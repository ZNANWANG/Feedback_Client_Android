<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Signup">

    <widget.LoginVideoView
        android:id="@+id/videoview1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

<!--    <ImageView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:scaleType="centerCrop"-->
<!--        android:src="@drawable/ic_back"-->
<!--        tools:layout_editor_absoluteX="0dp"-->
<!--        tools:layout_editor_absoluteY="0dp" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/unimelb_logo" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:text="Rapid Feedback"
                android:textColor="#014085"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:text="For Oral Presentation"
                android:textColor="#014085"
                android:textSize="40sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_login_insignup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Log In "
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textColor="#9D000000"
                        android:textSize="26sp" />

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FA030202" />

                    <TextView
                        android:id="@+id/textView_signup_insignup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" Sign Up"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical"
                    android:background="#33014085">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editText_firstName_insignup"
                            android:layout_width="350dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/rounded_white"
                            android:drawableLeft="@drawable/ic_user_email"
                            android:drawablePadding="5dp"
                            android:hint="First Name"
                            android:inputType="textPersonName"
                            android:paddingLeft="20dp"
                            android:paddingRight="50dp" />

                        <ImageView
                            android:id="@+id/signup_firstname_clear"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:onClick="clearFirstName"
                            android:src="@drawable/ic_clear" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editText_middleName_insignup"
                            android:layout_width="350dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/rounded_white"
                            android:drawableLeft="@drawable/ic_user_email"
                            android:drawablePadding="5dp"
                            android:hint="Middle Name (optional)"
                            android:inputType="textPersonName"
                            android:paddingLeft="20dp"
                            android:paddingRight="50dp" />

                        <ImageView
                            android:id="@+id/signup_middlename_clear"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:onClick="clearMiddleName"
                            android:src="@drawable/ic_clear" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/editText_lastname_insignup"
                            android:layout_width="350dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/rounded_white"
                            android:drawableLeft="@drawable/ic_user_email"
                            android:drawablePadding="5dp"
                            android:hint="Last Name"
                            android:inputType="textPersonName"
                            android:paddingLeft="20dp"
                            android:paddingRight="50dp" />

                        <ImageView
                            android:id="@+id/signup_lastname_clear"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_clear"
                            android:onClick="clearLastName"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/editText_email_insignup"
                            android:layout_width="350dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/rounded_white"
                            android:drawableLeft="@drawable/ic_email"
                            android:drawablePadding="5dp"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="20dp"
                            android:paddingRight="50dp" />

                        <ImageView
                            android:id="@+id/signup_email_clear"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_clear"
                            android:onClick="clearEmail"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/editText_password_insignup"
                            android:layout_width="350dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/rounded_white"
                            android:drawableLeft="@drawable/ic_user_password"
                            android:drawablePadding="5dp"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:paddingLeft="20dp"
                            android:paddingRight="50dp" />

                        <ImageView
                            android:id="@+id/signup_password_clear"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_clear"
                            android:onClick="clearPassword"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/editText_confirmPassword_insignup"
                            android:layout_width="350dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/rounded_white"
                            android:drawableLeft="@drawable/ic_user_password"
                            android:drawablePadding="5dp"
                            android:hint="Confirm Password"
                            android:inputType="textPassword"
                            android:paddingLeft="20dp"
                            android:paddingRight="50dp" />

                        <ImageView
                            android:id="@+id/signup_confirm_password_clear"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_clear"
                            android:onClick="clearConfirmedPassword"/>
                    </RelativeLayout>


                    <Button
                        android:id="@+id/button_signup_insignup"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/editText_confirmPassword_insignup"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="25dp"
                        android:layout_weight="1"
                        android:background="@drawable/ripple_button"
                        android:fontFamily="sans-serif-black"
                        android:onClick="signup"
                        android:text="Submit"
                        android:textSize="20dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Button"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

