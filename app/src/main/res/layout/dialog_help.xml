<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fillViewport="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/linearlayout_dialog_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView_tile_dialog_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Template"
                    android:textSize="30sp"
                    android:paddingTop="10dp"
                    android:paddingStart="16dp"
                    android:textColor="@color/black"/>

            </RelativeLayout>

            <View
                android:id="@+id/divider_dialog_warning_editing"
                android:layout_width="match_parent"
                android:layout_below="@id/linearlayout_dialog_help"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimary" />

            <ImageView
                android:id="@+id/imageView_dialog_help"
                android:layout_below="@id/divider_dialog_warning_editing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:background="@drawable/criteria"/>

        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>